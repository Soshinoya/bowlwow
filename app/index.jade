        +basicTemplate()
            .promotion__wrapper(style="opacity: 0;")
                section.promotion
                    .promotion-header
                        .promotion-header__container
                            .promotion-header__inner
                                .promotion-header__burger-link
                                    a меню
                        .menu
                            .menu__inner
                                .menu__left
                                    a.menu__left-logo(href='/')
                                        svg
                                            use(xlink:href="./images/sprite.svg#bowl-wow-natural-balanced")
                                    .menu__left-language
                                        h3 English
                                nav.menu-nav
                                    ul.menu-nav__list
                                        - const menuNavList = [{ label: 'О бренде', link: '#about' }, { label: 'Упаковки', link: '#packages' }, { label: 'Логотип', link: '#logotype' }, { label: 'Цветовая гамма', link: '#palette' }, { label: 'Шрифты', link: '#fonts' }, { label: 'Скачать', link: '#materials' }, { label: 'Фотостиль', link: '#photostyle' }];
                                        - menuNavList.forEach((item, index) => {
                                        -   const num = `0${index + 1}`
                                            li.menu-nav__item
                                                h3= num
                                                a.menu-nav__item-link(href='#{item.link}')= item.label
                                        - })
                                .menu__close
                                    h3 Закрыть
                    .promotion__content
                        .container
                            .promotion__body
                                h3.promotion__subtitle guidelines
                                .promotion__logo
                                    svg
                                        use(xlink:href="./images/sprite.svg#bowl-wow-natural-balanced")
                                p.promotion__text BOWL WOW [боул вау] — бренд суперпремиальных кормов для животных, разрабатываемых с любовью и производящихся под строгим контролем.
                                p.promotion__text Мы сфокусированы на экспертизе и качестве — не только в содержании (наших продуктах), но и в форме (как выглядит наш бренд). Поэтому мы создали этот раздел, чтобы все нужные материалы и правила их использования были всегда у вас под рукой.
                            +downloadButton('#materials', 'promotion__download-button', 'Скачать материалы')
                        a.promotion__content-arrow(href="#packages")
                .promotion__line--left
                    .screen__line--first
                        .screen__line--second
                            .screen__line--third
                                .screen__line--fourth
                                    .screen__line--fifth
                                        .screen__line--sixth
                .promotion__line--bottom
                    .screen__line--first
                        .screen__line--second
                            .screen__line--third
                                .screen__line--fourth
                                    .screen__line--fifth
                                        .screen__line--sixth
                .promotion__line--right
                    .screen__line--first
                        .screen__line--second
                            .screen__line--third
                                .screen__line--fourth
                                    .screen__line--fifth
                                        .screen__line--sixth
                img(class="promotion__image-bowl" src="./images/content/promotion-bowl.webp" alt="миска" loading="lazy" srcset="./images/content/promotion-bowl.webp 1x, ./images/content/promotion-bowl@2x.webp 2x")
                img(class="promotion__image-dog" src="./images/content/indoor-plant-wooden-floor.webp" alt="собака" loading="lazy" srcset="./images/content/indoor-plant-wooden-floor.webp 1x, ./images/content/indoor-plant-wooden-floor@2x.webp 2x")
            
            section(class="packages section-template section-template--white" id="packages")
                .container
                    div(class="packages__inner")
                        div(class="packages__body")
                            div(class="packages__header section-template__header")
                                h3(class="packages__title section-template__header-title") Упаковки
                            .packages__dog
