            .fonts__wrapper
                .container
                    section.fonts#fonts
                        .fonts__content
                            .fonts__body
                                .fonts__header.section-template__header
                                    h3.fonts__title.section-template__header-title Шрифты
                                .fonts__inner
                                    .fonts-field
                                        h3.fonts-field__title
                                            span BEBAS NEUE CYRILLIC
