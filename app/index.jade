doctype html
html(lang='ru')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title BOWL-WOW
        link(rel="stylesheet" href="css/style.min.css")
    body.body
        include ./components/templates/basicTemplate.jade
        include ./components/templates/section.jade
        include ./components/atoms/DownloadButton.jade

        +basicTemplate()
            .promotion__wrapper
                section.promotion
                    .promotion-header
                        .promotion-header__container
                            .promotion-header__inner
                                .promotion-header__burger-link(onclick="toggleMenu()")
                                    a меню
                        .menu
                            .menu__inner
                                .menu__left
                                    a.menu__left-logo(href='/')
                                        svg
                                            use(xlink:href="./images/sprite.svg#bowl-wow-natural-balanced")
                                    .menu__left-language
                                        h3 English
                                nav.menu-nav
                                    ul.menu-nav__list
                                        - const menuNavList = [{ label: 'О бренде', link: '#about' }, { label: 'Упаковки', link: '#packages' }, { label: 'Логотип', link: '#logotype' }, { label: 'Цветовая гамма', link: '#palette' }, { label: 'Шрифты', link: '#fonts' }, { label: 'Скачать', link: '#materials' }, { label: 'Фотостиль', link: '#photostyle' }];
                                        - menuNavList.forEach((item, index) => {
                                        -   const num = `0${index + 1}`
                                            li.menu-nav__item(onclick="toggleMenu()")
                                                h3= num
                                                a.menu-nav__item-link(href='#{item.link}')= item.label
                                        - })
                                .menu__close(onclick="toggleMenu()")
                                    h3 Закрыть
                    .promotion__content
                        .container
                            .promotion__body
                                h3.promotion__subtitle guidelines
                                .promotion__logo
                                    svg
                                        use(xlink:href="./images/sprite.svg#bowl-wow-natural-balanced")
                                p.promotion__text BOWL WOW [боул вау] — бренд суперпремиальных кормов для животных, разрабатываемых с любовью и производящихся под строгим контролем.
                                p.promotion__text Мы сфокусированы на экспертизе и качестве — не только в содержании (наших продуктах), но и в форме (как выглядит наш бренд). Поэтому мы создали этот раздел, чтобы все нужные материалы и правила их использования были всегда у вас под рукой.
                            +downloadButton('#downloadMaterials', 'promotion__download-button', 'Скачать материалы')
                .promotion__line--left
                    .screen__line--first
                        .screen__line--second
                            .screen__line--third
                                .screen__line--fourth
                                    .screen__line--fifth
                                        .screen__line--sixth
                .promotion__line--bottom
                    .screen__line--first
                        .screen__line--second
                            .screen__line--third
                                .screen__line--fourth
                                    .screen__line--fifth
                                        .screen__line--sixth
                .promotion__line--right
                    .screen__line--first
                        .screen__line--second
                            .screen__line--third
                                .screen__line--fourth
                                    .screen__line--fifth
                                        .screen__line--sixth
                img(class="promotion__image-bowl" src="./images/content/promotion-bowl.png" alt="миска" loading="lazy" srcset="./images/content/promotion-bowl.png 1x, ./images/content/promotion-bowl@2x.png 2x")
                img(class="promotion__image-dog" src="./images/content/indoor-plant-wooden-floor.png" alt="собака" loading="lazy" srcset="./images/content/indoor-plant-wooden-floor.png 1x, ./images/content/indoor-plant-wooden-floor@2x.png 2x")
            +section('white', 'packages', 'Упаковки')
                .packages__dog
                    img(src="./images/content/packages-dog.png" alt="Собака" srcset="./images/content/packages-dog.png 1x, ./images/content/packages-dog@2x.png 2x")
                .packages__cat
                    img(src="./images/content/packages-cat.png" alt="Кот" srcset="./images/content/packages-cat.png 1x, ./images/content/packages-cat@2x.png 2x")
                .packages__image
                    img(src="./images/content/packages.png" alt="упаковки" srcset="./images/content/packages.png 1x, ./images/content/packages@2x.png 2x")
                    img(src="./images/content/packages--mini.png" alt="упаковки" srcset="./images/content/packages--mini.png 1x, ./images/content/packages--mini@2x.png 2x")
            .logotype__wrapper
                +section('white', 'logotype', 'Логотип')
                    .logotype__logo-wrapper
                        .logotype__logo--first
                            .logotype__logo--second
                                .logotype__logo--third
                                    .logotype__logo--fourth
                    .row
                        .col-lg-4
                            .logotype__text
                                p Логотип является базовым и обязательным элементом дизайн-системы. Это основной элемент маркировки всех материалов, его наличие определяет всю информацию на носителе, как относящуюся  к бренду BOWL WOW.  
                        .col-lg-4
                            .logotype__text
                                p Его можно использовать с дескриптором или без. Дескриптор не должен использоваться на носителях небольшого размера. По необходимости можно использовать дополнительные версии логотипа с индикатором типа животного.
                        .col-lg-4
                            +downloadButton('#downloadLogo', 'logotype__download-button', 'Скачать логотип')
                section.logotype--second
                section.logotype--third
                section.logotype--fourth
                section.logotype--fifth

            .palette__wrapper
                .container
                    section.palette.palette--first#palette
                        .palette__content
                            .palette__body
                                .palette__header.section-template__header
                                    h3.palette__title.section-template__header-title цветовая палитра
                                .palette__main
                                    h2.palette__main-title brand
                                .palette__footer
                                    p.palette__footer-text Основная гамма бренда. Нельзя смешивать с гаммой собак.
                        ul.palette__colors
                            li.palette__colors-item(style="background-color: #ffffff;")
                                .palette__colors-item__info
                                    p Pantone 7641 C
                                    p web #922c48
                                    p CMYK 29 90 47 29
                            li.palette__colors-item(style="background-color: #1E1E1C;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone 7641 C
                                    p web #922c48
                                    p CMYK 29 90 47 29
                    section.palette#palette-cat
                        .palette__content
                            .palette__body
                                .palette__header.section-template__header
                                    h3.palette__title.section-template__header-title цветовая палитра
                                .palette__main
                                    h2.palette__main-title CATS
                                .palette__footer
                                    p.palette__footer-text Основная гамма бренда. Нельзя смешивать с гаммой собак.
                        ul.palette__colors
                            li.palette__colors-item(style="background-color: #922c48;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone - 7641 C
                                    p web #922c48
                                    p CMYK 29 90 47 29
                            li.palette__colors-item(style="background-color: #f29934;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone 2011 C
                                    p web #f29934
                                    p CMYK 2 47 84 0
                            li.palette__colors-item(style="background-color: #feaebb;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone Red 0331 C
                                    p web #feaebb
                                    p CMYK 0 43 14 0
                            li.palette__colors-item(style="background-color: #6e7ba0;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone 7667 C
                                    p web #6e7ba0
                                    p CMYK 63 48 20 4
                    section.palette#palette-dog
                        .palette__content
                            .palette__body
                                .palette__header.section-template__header
                                    h3.palette__title.section-template__header-title цветовая палитра
                                .palette__main
                                    h2.palette__main-title DOGS
                                .palette__footer
                                    p.palette__footer-text Дополнительная гамма бренда. Нельзя смешивать с гаммой кошек.
                        ul.palette__colors
                            li.palette__colors-item(style="background-color: #e5bec3;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone 692 C
                                    p web #e5bec3
                                    p CMYK 10 31 17 0
                            li.palette__colors-item(style="background-color: #96262c;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone 7622 C
                                    p web #96262c
                                    p CMYK 27 94 77 27
                            li.palette__colors-item(style="background-color: #ff8300;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone 151 C
                                    p web #ff8300
                                    p CMYK 0 59 94 0
                            li.palette__colors-item(style="background-color: #ab0033;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone 207 C
                                    p web #ab0033
                                    p MYK 22 100 67 17
                            li.palette__colors-item(style="background-color: #006241;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone 3425 C
                                    p web #006241
                                    p CMYK 96 33 82 29
                            li.palette__colors-item(style="background-color: #d65d72;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone 702 C
                                    p web #d65d72
                                    p CMYK 11 75 39 2
                            li.palette__colors-item(style="background-color: #93a7cb;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone 7681 C
                                    p web #93a7cb
                                    p CMYK 48 30 8 0
                            li.palette__colors-item(style="background-color: #007580;")
                                .palette__colors-item__info.palette__colors-item__info--white
                                    p Pantone 7714 C
                                    p web #007580
                                    p CMYK 99 26 43 15

            .fonts__wrapper
                .container
                    section.fonts#fonts
                        .fonts__content
                            .fonts__body
                                .fonts__header.section-template__header
                                    h3.fonts__title.section-template__header-title Шрифты
                                .fonts__inner
                                    .fonts-field
                                        h3.fonts-field__title BEBAS NEUE CYRILLIC
                                        h3.fonts-field__weight REGULAR
                                        p.fonts-field__description Шрифт для заголовков и акцентных текстов
                                    .fonts-field
                                        h3.fonts-field__title MONTSERRAT
                                        h3.fonts-field__weight MEDIUM / 
                                            bold BOLD
                                        p.fonts-field__description Шрифт для основного текста документов
                        .fonts__image
                            img(src="./images/sprite.svg#fonts-background", alt="фон с буквами")

            +section('dark', 'photostyle', 'Фотостиль')
                .photostyle__info
                    .row
                        .col-md-6
                            p.photostyle__text Для фонов используются стильные светлые белые «дышащие» пространства преимущественно нейтральных или прохладных оттенков. Где нужно — сочные (но естественные) натуральные ингредиенты.
                        .col-md-6
                            p.photostyle__text Животные для маркетинговых материалов должны быть в естественных позах, идеально в движении (бег, лежа, поднятая лапка и т.д). Рекомендуется избегать нереалистичные позы и странные выражения мордочек.
                .photostyle__slider
                    .swiper
                        .swiper-wrapper
                            - const images = [{ src: './images/content/slider/slide1.jpg', srcSet: './images/content/slider/slide1@2x.jpg' }, { src: './images/content/slider/slide2.jpg', srcSet: './images/content/slider/slide2@2x.jpg' }, { src: './images/content/slider/slide3.jpg', srcSet: './images/content/slider/slide3@2x.jpg' }, { src: './images/content/slider/slide4.jpg', srcSet: './images/content/slider/slide4@2x.jpg' }, { src: './images/content/slider/slide5.jpg', srcSet: './images/content/slider/slide5@2x.jpg' }, { src: './images/content/slider/slide6.jpg', srcSet: './images/content/slider/slide6@2x.jpg' }, { src: './images/content/slider/slide7.jpg', srcSet: './images/content/slider/slide7@2x.jpg' }, { src: './images/content/slider/slide8.jpg', srcSet: './images/content/slider/slide8@2x.jpg' }, { src: './images/content/slider/slide9.jpg', srcSet: './images/content/slider/slide9@2x.jpg' }]
                            for imgObj in images
                                .swiper-slide
                                    .photostyle__slider-slide
                                        img(src="#{imgObj.src}" srcset="#{imgObj.src} 1x, #{imgObj.setSrc} 2x" alt="")
                    .photostyle__slider-button__wrapper
                        .photostyle__slider-button.photostyle__slider-button--prev ←
                        .photostyle__slider-button.photostyle__slider-button--next →
            +section('white', 'materials', 'Скачать материалы')
                .materials__links-inner
                    +downloadButton('#', '', 'гайдбук (pdf)')
                    +downloadButton('#', '', 'логотип')
                    +downloadButton('#', '', 'шрифты')
                    +downloadButton('#', '', 'упаковки')
                    +downloadButton('#', '', 'единый архив')
                .materials__image-dog
                    img(src="./images/content/materials-dog.png" alt="собака" srcset="./images/content/materials-dog.png 1x, ./images/content/materials-dog@2x.png 2x")


    //- svg
    //-     use(xlink:href="./images/sprite.svg")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js")
    script(src="js/main.min.js" defer)